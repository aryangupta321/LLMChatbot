{
  "info": {
    "name": "Zoho SalesIQ - Open Conversation (Visitor API)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "b7c5b4e4-1e35-4a6a-a7c5-ps-siq-openconv"
  },
  "variable": [
    { "key": "dc", "value": "in", "type": "string" },
    { "key": "screen_name", "value": "rtdsportal", "type": "string" },
    { "key": "access_token", "value": "PASTE_ACCESS_TOKEN_HERE", "type": "string" },
    { "key": "org_id", "value": "60000687661", "type": "string" },
    { "key": "app_id", "value": "2782000005628361", "type": "string" },
    { "key": "department_id", "value": "2782000000002013", "type": "string" },
    { "key": "visitor_id", "value": "test_visitor_123", "type": "string" },
    { "key": "email", "value": "you@example.com", "type": "string" }
  ],
  "item": [
    {
      "name": "Open Conversation (Transfer to Agent)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Zoho-oauthtoken {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "https://salesiq.zoho.{{dc}}/api/visitor/v1/{{screen_name}}/conversations",
          "protocol": "https",
          "host": [
            "salesiq",
            "zoho",
            "{{dc}}"
          ],
          "path": [
            "api",
            "visitor",
            "v1",
            "{{screen_name}}",
            "conversations"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"visitor\": {\n    \"email\": \"{{email}}\",\n    \"country_code\": \"IN\",\n    \"language\": \"en\"\n  },\n  \"app_id\": \"{{app_id}}\",\n  \"department_id\": \"{{department_id}}\",\n  \"question\": \"User requested Instant Chat via bot.\"\n}"
        }
      },
      "response": []
    }
  ]
}